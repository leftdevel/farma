<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="base.listener.login" class="Farma\BaseBundle\Listener\LoginListener">
            <argument type="service" id="router" />
            <argument type="service" id="security.context" />
        </service>

        <service id="base.repository.user" class="Farma\BaseBundle\Repository\UserRepository">
            <factory service="doctrine.orm.default_entity_manager" method="getRepository" />
            <argument>Farma\BaseBundle\Entity\User</argument>
        </service>

    </services>
</container>