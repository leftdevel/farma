{% extends '::base.html.twig' %}

{% block title %}Acceder{% endblock %}

{% block body %}
<div class="section no-pad-bot">
    <div class="container center">
      <br><br>
      <h2 class="center teal-text"><i class="large mdi-action-account-circle"></i></h2>
      <h2 class="header orange-text hide-on-med-and-down">Acceder</h2>
      <br><br>
    </div>
</div>

<div class="container">
    <div class="section">
      <div class="row">
        <form class="col s12" method="post" action="{{ path('_base_security_check') }}">
            {{ error ? error.message : '' }}
          <div class="row">
            <div class="input-field col s12">
              <input id="username" type="text" class="validate" name="_username" value="{{ last_username }}">
              <label class="active" for="username">Usuario</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="password" type="password" name="password" class="validate">
              <label class="active" for="password">Conrase√±a</label>
            </div>
          </div>
          <div class="row">
            <div class="col s12">
                <button class="btn waves-effect waves-light" type="submit" name="action">Acceder
                    <i class="mdi-content-send right"></i>
                </button>
            </div>
          </div>
        </form>
      </div>
    </div>
</div>
{% endblock %}